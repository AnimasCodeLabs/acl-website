<!DOCTYPE html>
<html>
  <head>
    <%= metamagic title: "Animas Code Labs | Web and Mobile Apps built in Durango, Colorado" %>
    <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Montserrat|Pontano+Sans' %>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <!--[if lt IE 9]>
        <script src="/js/html5shiv.js"></script>
        <script src="/js/selectivizr-min.js"></script>
        <![endif]-->
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">
  </head>
  <body>
    <header id="site-header">
      <div class="container">
        <div class="logo">
          <%= link_to root_path do %>
            <h1>Animas Code Labs</h1>
          <% end %>
        </div>
        <nav id="site-nav">
          <ul>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Contact", contact_path %></li>
          </ul>
        </nav>
      </div>
    </header>

    <%= yield %>

    <footer id="site-footer">
      <div class="container">
        <div class="copyright">
          Animas Code Labs &copy; <%= Date.today.year %>
        </div>
        <nav class="site-footer-nav">
          <ul>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Contact", contact_path %></li>
          </ul>
        </nav>
      </div>
    </footer>
    <% if Rails.env.production? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
ga('create', 'UA-44483329-1', 'animascodelabs.com');
ga('send', 'pageview');
      </script>
    <% end %>

  </body>
</html>
